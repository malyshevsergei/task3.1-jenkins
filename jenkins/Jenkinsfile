pipeline {
    agent { 
        dockerfile {
            filename "Dockerfile"
            label 'ubuntu'
            args '-p ${ports}'
            additionalBuildArgs "-t app:${version}"
        }
    }
    stages {
        stage('Build') {
            steps {
                sh 'npm install'
            }
        }
        stage('Test') {
            steps {
                sh './jenkins/scripts/test.sh'
            }
        }
        stage('Deliver') {
            steps {
                sh './jenkins/scripts/deliver.sh'
            }
        }
    }
    post {
        success {
            node ('ubuntu') {
                sh 'docker run -p ${ports} app:${version}'
            }
        }
    }
}
