  <build>
    <plugins>
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <version>${maven.assembly.plugin}</version>
        <executions>
          <execution>
            <id>create-sandbox</id>
            <configuration>
              <descriptors>
                <descriptor>src/assembly/sandbox.xml</descriptor>
              </descriptors>
              <attach>false</attach>
            </configuration>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>consulo.maven</groupId>
        <artifactId>maven-consulo-plugin</artifactId>
        <version>2-SNAPSHOT</version>
        <configuration>
          <execution>
            <buildDirectory>${project.build.directory}/consulo-sandbox-desktop-swt-${project.version}-main</buildDirectory>
          </execution>
        </configuration>
      </plugin>
    </plugins>
  </build>

